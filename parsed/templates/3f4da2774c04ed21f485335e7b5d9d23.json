{
  "components/custom/post-snippet": "    <div class=\"blog-post-body polytek-card\">\r\n            {{#if post.thumbnail}}\r\n                <a href=\"{{post.url}}\">\r\n                    <img class=\"lazyload\" data-sizes=\"auto\" src=\"{{cdn 'img/loading.svg'}}\" data-src=\"{{getImage post.thumbnail 'blog_size'}}\" alt=\"{{post.thumbnail.alt}}\" title=\"{{post.thumbnail.alt}}\">\r\n                </a>\r\n            {{/if}}\r\n            <div class=\"polytek-card-text\">\r\n                <a href=\"{{post.url}}\"><h4>{{post.title}}</a>\r\n            </h4>\r\n            <p>{{{post.summary}}}...</p>\r\n        </div>\r\n            <div class=\"polytek-card-button\">\r\n                <a class=\"button button--primary\" href=\"{{post.url}}\"><strong>Learn More</strong></a>\r\n                   <!-- {{#if post.tags}}\r\n                <div class=\"blog-tags\">\r\n                    {{#each (limit post.tags 3)}}\r\n                    <span class=\"blog-tag\">\r\n                        <a class=\"button button--secondary\" href=\"{{url}}\">#{{name}}</a>\r\n                    </span>\r\n                    {{/each}}\r\n                </div>\r\n            {{/if}} -->\r\n            </div>\r\n    </div>\r\n\r\n"
